# Database Configuration
DATABASE_URL=postgres://oews:oews@localhost:5432/oews

# OpenAI (for meaningfulness scoring)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
MEANINGFULNESS_BATCH_LIMIT=50

# Backup settings
BACKUP_TABLE=meaningfulness_scores
BACKUP_PATH=
BACKUP_DIR=./data/backup
BACKUP_BATCH_SIZE=5000
RESTORE_BATCH_SIZE=1000

# Docker Compose Database Configuration
POSTGRES_DB=oews
POSTGRES_USER=oews
POSTGRES_PASSWORD=oews
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# NOTE: You may need to change things below here depending on your docker runtime and OS
#
# Testcontainers Configuration: https://node.testcontainers.org/supported-container-runtimes/
# Set TEST_DOCKER_HOST to point to your Docker socket for testcontainers
TEST_DOCKER_HOST=

# Testcontainers socket override for Rancher Desktop
# Set TESTCONTAINERS_DOCKER_SOCKET_OVERRIDE to /var/run/docker.sock for Rancher Desktop
TESTCONTAINERS_DOCKER_SOCKET_OVERRIDE=
